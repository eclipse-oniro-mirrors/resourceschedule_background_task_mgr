          "napi",
          "safwk",
          "samgr_standard",
          "startup_l2",
          "utils_base"
        ],
        "third_party": [ "googletest" ]
      },
      "build": {
        "sub_component": [
          "//foundation/resourceschedule/background_task_mgr/interfaces:bgtaskmgr_interfaces",
